// ===== MAIN COMPONENT =====

export default function AdminDashboard({ 
    auth, 
    statistics, 
    pending_actions, 
    compliance_trend, 
    alerts,
}) {
    const user = auth.user;
    const [activeTab, setActiveTab] = useState('dashboard');
    const [aiQuery, setAiQuery] = useState('');
    const [loading, setLoading] = useState(false);
    const [showExportMenu, setShowExportMenu] = useState(false);
    const [dashboardData, setDashboardData] = useState(null);

    // Analytics-specific state (fall back to incoming prop if available)
    const [analyticsData, setAnalyticsData] = useState(compliance_trend && compliance_trend.length ? compliance_trend : null);
    const [analyticsLoading, setAnalyticsLoading] = useState(false);
    const [analyticsError, setAnalyticsError] = useState(null);

    useEffect(() => {
        loadDashboardData();

        // If no analytics data passed from server, fetch it
        if ((!compliance_trend || !compliance_trend.length) && !analyticsData) {
            fetchAnalyticsData();
        }
    }, []);

    const loadDashboardData = async () => {
        try {
            setLoading(true);
            const response = await fetch('/api/admin/metrics/dashboard-stats');
            if (response.ok) {
                const data = await response.json();
                setDashboardData(data);
            }
        } catch (error) {
            console.error('Error loading dashboard data:', error);
        } finally {
            setLoading(false);
        }
    };

    const fetchAnalyticsData = async () => {
        try {
            setAnalyticsLoading(true);
            const response = await fetch('/api/admin/metrics/compliance-trend');
            if (response.ok) {
                const data = await response.json();
                setAnalyticsData(data);
            } else {
                setAnalyticsError('Failed to load analytics');
            }
        } catch (error) {
            console.error('Error loading analytics data:', error);
            setAnalyticsError(error.message);
        } finally {
            setAnalyticsLoading(false);
        }
    };

    const handleAiSearch = (e) => {
        if (e.key === 'Enter' && aiQuery.trim()) {
            router.get('/admin/users', { search: aiQuery });
            setAiQuery('');
        }
    };

    const handleExport = (type) => {
        const formats = {
            pdf: '/api/admin/reports/export?format=pdf',
            excel: '/api/admin/reports/export?format=excel',
            csv: '/api/admin/reports/export?format=csv'
        };
        window.location.href = formats[type] || '/api/admin/reports/export';
        setShowExportMenu(false);
    };

    const handleRefresh = async () => {
        setLoading(true);
        await loadDashboardData();
    };

    const navigateTo = (path) => {
        router.get(path);
    };

    const navigateToPending = (type) => {
        if (type === 'enrollment') {
            router.get('/admin/users', { filter: 'pending_enrollment' });
        } else if (type === 'certification') {
            router.get('/admin/users', { filter: 'pending_certification' });
        }
    };

    // Analytics summary (compute average, highest, lowest from analyticsData)
    const analyticsSummary = React.useMemo(() => {
        const arr = analyticsData || compliance_trend || [];
        if (!arr || !arr.length) return null;
        const nums = arr.map((d) => Number(d.completed) || 0);
        const avg = Math.round((nums.reduce((a,b) => a + b, 0) / nums.length) * 10) / 10;
        const highest = Math.max(...nums);
        const lowest = Math.min(...nums);
        const highestMonth = arr[nums.indexOf(highest)]?.month || '-';
        const lowestMonth = arr[nums.indexOf(lowest)]?.month || '-';
        return { avg, highest, lowest, highestMonth, lowestMonth };
    }, [analyticsData, compliance_trend]);

    const formatDate = (d) => {
        try { return new Date(d).toLocaleDateString(); } catch (e) { return d; }
    };

    const tabs = [
        { id: 'dashboard', label: 'Overview', icon: Zap },
        { id: 'analytics', label: 'Analytics', icon: BarChart2 },
        { id: 'reports', label: 'Reports', icon: FileText },
    ];

    return (
        <AdminLayout user={user}>
            <Head title="HCMS BNI - Admin Dashboard" />
            
            <div className="min-h-screen bg-white font-sans text-slate-900 pb-20">
                
                {/* Abstract Gradient Background */}
                <div className="absolute top-0 right-0 w-full h-64 overflow-hidden pointer-events-none z-0">
                    <div className="absolute -top-20 -right-20 w-96 h-96 bg-cyan-400/10 rounded-full blur-3xl"></div>
                    <div className="absolute top-0 right-0 w-64 h-64 bg-orange-400/5 rounded-full blur-3xl"></div>
                </div>

                {/* ===== TOP NAVBAR ===== */}
                <header className="relative z-20 px-6 pt-8 pb-6 flex items-center justify-between">
